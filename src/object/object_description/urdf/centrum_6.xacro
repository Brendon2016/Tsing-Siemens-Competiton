<?xml version="1.0"?>
<!-- Revolute-Revolute Manipulator -->
<robot name="centrum_6" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Constants for robot dimensions -->
  <xacro:property name="PI" value="3.1415926535897931"/>
  <xacro:property name="mass" value="0.01" /> <!-- arbitrary value for mass -->

  <xacro:include filename="$(find object_description)/urdf/materials.xacro" />

  <link name="world"/>

  <joint name="world_centrum_6" type="floating">
    <parent link="world"/>
    <child link="centrum_6"/>
    <origin xyz="0 0 0" rpy="0 0 ${PI/6}"/>
  </joint>


  <!-- table -->
  <link name="centrum_6">

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
	<mesh filename="package://object_description/meshes/centrum_6.stl" scale="1 1 1" />
      </geometry>
      <material name="orange"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
	<mesh filename="package://object_description/meshes/centrum_6.stl" scale="1 1 1" />
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${mass}"/>
      <inertia
	  ixx="0.00000364583333" ixy="0.0" ixz="0.0"
	  iyy="0.00000364583333" iyz="0.0"
	  izz="0.000003125" />
    </inertial>
  </link>

  <gazebo reference="centrum_6">  
    <material>Gazebo/Wood</material>  
    <mu1>10000</mu1>  
    <mu2>5000</mu2>  
    <kp>10000.0</kp>  
    <kd>1.0</kd>  
  </gazebo> 


</robot>
